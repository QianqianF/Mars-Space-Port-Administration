						<input type="text" name="NewName" id="NewName" placeholder="New Name" />
						<input type="submit" />
					</form>

					<!-- Astronaut Insert -->
					<form id="astroInsert" method="post" action="astroInsert" style="display: none">
						<input type="text" pattern="[0-9]{0,100}" name="AstroID" id="AstroID" placeholder="AstroID" />
						<input type="text" name="Name" id="Name" placeholder="Name" />
						<input type="submit" />
					</form>

				</div>


			<div id="result">
