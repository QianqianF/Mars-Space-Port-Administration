<script>
	function showAstroForm() {
		let selectBox = document.getElementById("selection");
		let userInput = selectBox[selectBox.selectedIndex].value;
		document.getElementById("astroFind").style.display = "none";
		document.getElementById("astroInsert").style.display = "none";
		document.getElementById("astroUpdate").style.display = "none";
		if (userInput === "Find") {
			document.getElementById("astroFind").style.display = "flex";
		} else if (userInput === "Update") {
			document.getElementById("astroUpdate").style.display = "flex";
		} else if (userInput === "Insert") {
			document.getElementById("astroInsert").style.display = "flex";
		}
	}

</script>


